<!--pages/text/text.wxml-->
<!-- 1. 基本使用 -->
<text>Hello World\n</text>
<text>你好小程序\n</text>

<!-- 2.seletable: true -->
<!-- 默认情况下，text中文本长按是不能选中的 -->
<!-- 如果要用false，只需要填入空字符串-->
<text selectable="{{true}}">Hello wzy\n</text>
<text selectable>Hello wzy\n</text>

<!-- 3.space:决定空格的大小 -->
<text>Hello World\n</text>
<text space="nbsp">Hello World\n</text>
<text space="ensp">Hello World\n</text>
<text space="emsp">Hello World\n</text>

<!-- 4.decode属性：是否解码文本 -->
<text decode>5 &gt; 3</text>
